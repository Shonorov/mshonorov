<hibernate-mapping>
    <class name="ru.job4j.cars.model.User" table="users">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" unique="true"/>
        <property name="login" column="login" unique="true"/>
        <property name="password" column="password"/>
    </class>
</hibernate-mapping>